{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "Web.Bff.AdminPortal.Ocelot V1"
    },
    "Document": {
      "Description": "Admin Portal Aggregator for Web Clients",
      "Title": "Admin Portal Aggregator for Web Clients",
      "Version": "v1"
    }
  },
  "Identity": {
    "Url": "http://localhost:5223",
    "Audience": "adminportalagg",
    "Scopes": {
      "webshoppingagg": "Admin Portal Aggregator for Web Clients"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "c-short": {
        "ClusterId": "product",
        "Match": {
          "Path": "p/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/p" }
        ]
      },
      "c-long": {
        "ClusterId": "product",
        "Match": {
          "Path": "product-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product-api" }
        ]
      }
    },
    "Clusters": {
      "product": {
        "Destinations": {
          "destination0": {
            "Address": "https://localhost:44398"
          }
        }
      }
    }
  },
  "Urls": {
    "Product": "https://localhost:44398"
  },
  "ProductUrlHC": "https://localhost:44398/hc"
}